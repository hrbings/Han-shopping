<resources>
    <!--single font-->
    <style name="appHausDinBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_haus_din_bold</item>
    </style>

    <style name="appHausDinCon" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_haus_din_con</item>
    </style>

    <style name="appHausDinConItalic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_haus_din_con_italic</item>
    </style>

    <style name="appHausDinRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_haus_din_regular</item>
    </style>

    <style name="appNeueProBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_neue_pro_bold</item>
    </style>

    <style name="appNeueProLight" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_neue_pro_light</item>
    </style>

    <style name="appYeeZyTStarBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_yeezy_tstar_bold</item>
    </style>

    <style name="appYeeZyTStarHeavy" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_yeezy_tstar_heavy</item>
    </style>

    <style name="appYeeZyTStarRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_yeezy_tstar_regular</item>
    </style>

    <!--size font ==> appHausDinBold-->
    <style name="appHausDinBold.12">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="appHausDinBold.12.gray">
        <item name="android:textColor">@color/appGray</item>
    </style>

    <style name="appHausDinBold.12.black">
        <item name="android:textColor">@color/appBlack</item>
    </style>

    <style name="appHausDinBold.12.blue">
        <item name="android:textColor">@color/appBlue</item>
    </style>

    <style name="appHausDinBold.12.red">
        <item name="android:textColor">@color/appRed</item>
    </style>

    <!--size font ==> appHausDinRegular-->
    <style name="appHausDinRegular.12">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="appHausDinRegular.12.gray">
        <item name="android:textColor">@color/appGray</item>
    </style>

    <style name="appHausDinRegular.12.black">
        <item name="android:textColor">@color/appBlack</item>
    </style>

    <style name="appHausDinRegular.12.blue">
        <item name="android:textColor">@color/appBlue</item>
    </style>

    <style name="appHausDinRegular.12.red">
        <item name="android:textColor">@color/appRed</item>
    </style>
</resources>
